{% extends 'base.html.twig' %}

{% block title %}Bioramas - La boutique du CBD Bio - Mes adresses
{% endblock %}

{% block content %}
	<a href="{{ path('account_adress_add')}}" class="btn btn-info btn-sm float-right">Ajouter une adresses</a>
	<h1>Mes adresses</h1>
	<p>
		C'est dans cette espace que vous allez pouvoir gÃ©rer toutes vos adresses.<br/>
		<a href="{{ path('account')}}">Retour</a>
	</p>
	<hr>
	{% if app.user.adresses|length == 0 %}
		<p class="text-center">
			Vous n'avez pas encore d'adresse dans votre compte client. Pour en ajouter une, Veuillez
			<a href="">Cliquer ici</a>
		</p>
	{% else %}
		<div class="row">
			{% for address in app.user.adresses %}
			<div class="col-md-4">
				<div class="card" style="width: 18rem;">
					<div class="card-body">
						<h5 class="card-title">{{address.firstname}}</h5>
						<p class="card-text">
                            {{address.address}},<br/>
                            {{address.postal}} - {{address.city}}
                        </p>
						<a href="{{ path('account_adress_edit', {'id' : address.id})}}">Modifier</a>|<a href="{{ path('account_adress_delete', {'id' : address.id})}}">Suprimer</a>
					</div>
				</div>
			</div>
            {% endfor %}
		</div>
	{% endif %}
{% endblock %}
